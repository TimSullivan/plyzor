<h1>Interpose Cypher Generator</h1>

<%= form_tag '/cypher', method: :get, class: 'form-horizontal' do %>

  <div class="form-group">
    <%= label_tag :plaintext, "Plaintext", class: 'control-label col-sm-2' %>
    <div class="col-sm-10">
      <%= text_area_tag :plaintext, '', class: 'form-control', rows: 10 %>
    </div>
  </div>
  <div class="form-group">
    <%= label_tag :length, "length", class: 'control-label col-sm-2' %>
    <div class="col-sm-8">
      <%= number_field_tag :length, :size, value: 5, class: 'form-control' %>
    </div>
    <div class='col-sm-2'>
      <a href='#' id='encode-button' class='btn btn-danger pull-right'>Encode</a>
    </div>
  </div>


  <div class="form-group">
    <%= label_tag :cyphertext, "Cyphertext", class: 'control-label col-sm-2' %>
    <div class="col-sm-10">
      <%= text_area_tag :cyphertext, '', class: 'form-control', rows: 10 %>
    </div>
  </div>

  
<% end -%>